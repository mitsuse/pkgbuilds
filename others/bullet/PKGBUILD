pkgname=bullet
pkgver=0.1.0
pkgrel=1
pkgdesc="A command-line tool to send a message to devices via Pushbullet."
arch=('i686' 'x86_64')
url="https://github.com/mitsuse/bullet"
license=(MIT)
depends=()
optdepends=()
backup=()

source_i686=(
    https://github.com/mitsuse/${pkgname}/releases/download/v${pkgver}/linux_386.zip
)
sha1sums_i686=('b6341c556168803a8a7f17714e057d18e718cbc0')

source_x86_64=(
    https://github.com/mitsuse/${pkgname}/releases/download/v${pkgver}/linux_amd64.zip
)
sha1sums_x86_64('019235c6fa80aab37c8accfb869773bc23309da2')

build() { 
}

package() {
    cd "$srcdir/$pkgname-$pkgver/"
    install -d "${pkgdir}/usr/bin/"
    install -m 755 bullet "${pkgdir}/usr/bin"
}
